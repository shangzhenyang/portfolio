{
	"extends": [
		"next/core-web-vitals",
		"plugin:@typescript-eslint/recommended",
		"plugin:jsx-a11y/recommended"
	],
	"rules": {
		"arrow-body-style": [
			"error",
			"always"
		],
		"arrow-parens": [
			"error",
			"always"
		],
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"curly": [
			"error",
			"all"
		],
		"default-case": "error",
		"default-case-last": "error",
		"eol-last": [
			"error",
			"always"
		],
		"eqeqeq": [
			"error",
			"always"
		],
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"no-mixed-operators": "error",
		"prefer-const": "error",
		"quotes": [
			"error",
			"double"
		],
		"react/jsx-closing-bracket-location": "error",
		"semi": [
			"error",
			"always"
		],
		"@typescript-eslint/explicit-function-return-type": "error"
	}
}
